@model IEnumerable<FishingProject.Models.ProductOrder>
<br />
<br />
<u><h2>Orders Completed</h2></u>
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                Participant Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
   @foreach (var item in Model){
        <tr class="active">
            <td>
                @Html.DisplayFor(modelItem => item.Order.Participant.FirstName) @Html.DisplayFor(modelItem => item.Order.Participant.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td></td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back To Home Page", "Index", "Home")
</div>
