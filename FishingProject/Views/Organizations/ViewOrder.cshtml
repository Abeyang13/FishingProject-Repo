@model IEnumerable<FishingProject.Models.ProductOrder>
@using System.Globalization

<u><h2>Your Order</h2></u>
<br />
@using (Html.BeginForm())
 {
 <table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model){
        <tr class="active">
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductOrderId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductOrderId })
            </td>
        </tr>
     }
</table>
}
<div>
<h5>Order Total</h5>
<form action="/Participants/Charge" method="POST">
    <article>
        <label>Amount: @ViewBag.Total</label>
    </article>
    <script src="//checkout.stripe.com/v2/checkout.js"
            class="stripe-button"
            data-key= "@Keys.PublishableKey"
            data-locale="auto"
            data-description="Sample Charge"
            data-amount="">
    </script>
</form>
</div>
<br />
<br />
<div>
    @Html.ActionLink("Continue Order", "Merchandise", "Organizations")
</div>
