@model IEnumerable<FishingProject.Models.TournamentTeam>

<u><h2>Teams In Tournament</h2></u>
<table class="table">
    <tr>
        <th>
            Place
        </th>
        <th>
            Team
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BigBass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfFishes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalWeight)
        </th>
        <th></th>
    </tr>
    @{
        int i = 1;
     }
    @foreach (var item in Model)
    {
        
        <tr>
            <td>
                @i
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BigBass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfFishes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalWeight)
            </td>
            @if (this.User.IsInRole("Organization"))
            {
            <td>
                @Html.ActionLink("EditTournamentTeam", "EditTournamentTeam", new { id = item.TournamentTeamId }) |
                @Html.ActionLink("Delete Team", "DeleteTeam", new { id = item.TournamentTeamId })
            </td>
            }
        </tr>
        i++;
    }
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
